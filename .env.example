# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/agriculture_management

# JWT Secret (use a strong, random string in production)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Weather API (optional - app works with mock data if not provided)
VITE_OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Default location for weather (optional)
VITE_DEFAULT_LAT=40.7128
VITE_DEFAULT_LON=-74.0060
VITE_DEFAULT_CITY=New York